# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Documentation
*.md text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.svg text eol=lf

# Binary files
*.pdf binary
*.docx binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
